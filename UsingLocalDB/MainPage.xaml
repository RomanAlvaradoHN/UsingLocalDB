<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsingLocalDB.MainPage">

    <StackLayout Padding="20" Spacing="10">

        <Frame CornerRadius="10" Padding="5">
            <Entry x:Name="txtNombre" Placeholder="Ingrese Nombre" Keyboard="Text"/>
        </Frame>

        <Frame CornerRadius="10" Padding="5">
            <Entry x:Name="txtApellido" Placeholder="Ingrese Apellido" Keyboard="Text"/>
        </Frame>
       
        <Frame CornerRadius="10" Padding="5">
            <Entry x:Name="txtDNI" Placeholder="Ingrese DNI" Keyboard="Numeric"/>
        </Frame>


        <Button
            x:Name="btnGuardarDatos"
            Text="Guardar Datos"
            Clicked="OnBtnGuadarDatosClicked"
            HorizontalOptions="Fill">
        </Button>


    </StackLayout>

</ContentPage>
